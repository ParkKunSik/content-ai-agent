# [Profile Configuration]
# local, dev, prod
ENV="local"

# [GCP Configuration]
GCP_PROJECT_ID="your-gcp-project-id"
GCP_REGION="asia-northeast3"
# Local Dev Only: Path to credentials if not using 'gcloud auth application-default login'
# GOOGLE_APPLICATION_CREDENTIALS="path/to/key.json"

# [Internal Identity]
INTERNAL_AGENT_ID="local-content-ai-agent-v1"

# [System Instruction]
# Version of the system prompt templates to use (folder name in src/prompts/templates/system/)
SYSTEM_INSTRUCTION_VERSION="v1"

# [Redis Configuration]
# Local: localhost / Prod: 10.x.x.x (Read from Secret if not set here)
REDIS_HOST="localhost"
REDIS_PORT=6379
# Password will be fetched from Secret Manager if commented out, using key: {ENV}-REDIS_PASSWORD
# REDIS_PASSWORD="local-secret-password"

# [Elasticsearch Configuration]
ELASTICSEARCH_URL="http://localhost:9200"
# API Key will be fetched from Secret Manager if commented out, using key: {ENV}-ELASTICSEARCH_API_KEY
# ELASTICSEARCH_API_KEY="your-local-api-key"
ELASTICSEARCH_INDEX_HISTORY="local-content-ai-history"

# [Model Configuration]
VERTEX_AI_MODEL_PRO="gemini-3.0-pro-preview-01"
VERTEX_AI_MODEL_FLASH="gemini-2.5-flash"
